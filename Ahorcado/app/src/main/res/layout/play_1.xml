<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/play_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sergio.ahorcado.Play_1"
    android:weightSum="1">

    <ImageView
        android:layout_width="78dp"
        android:layout_height="67dp"
        app:srcCompat="@drawable/killer"
        android:id="@+id/id_killer"
        android:visibility="invisible"
        android:background="@android:color/transparent"
        app:layout_constraintRight_toLeftOf="@+id/id_but_GO"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/id_head"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/id_but_GO" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/rightleg"
        android:id="@+id/id_leg_right"
        android:visibility="invisible"
        android:background="@android:color/transparent"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf="@+id/id_body"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/id_body"
        android:layout_marginLeft="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/leftleg"
        android:id="@+id/id_leg_left"
        android:visibility="invisible"
        android:background="@android:color/transparent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="146dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="146dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/leftarm"
        android:id="@+id/id_arm_right"
        android:visibility="invisible"
        android:background="@android:color/transparent"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="5dp"
        android:layout_marginTop="24dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/id_body"
        app:layout_constraintLeft_toRightOf="@+id/id_body"
        android:layout_marginLeft="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/leftarm"
        android:id="@+id/id_arm_left"
        android:visibility="invisible"
        android:background="@android:color/transparent"
        app:layout_constraintRight_toLeftOf="@+id/id_body"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="@+id/id_body"
        android:layout_marginRight="6dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/body"
        android:id="@+id/id_body"
        android:visibility="invisible"
        android:background="@android:color/transparent"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/id_leg_left"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="4dp"
        app:layout_constraintLeft_toRightOf="@+id/id_leg_left" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/head"
        android:id="@+id/id_head"
        android:visibility="invisible"
        android:background="@android:color/transparent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/id_body"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="33dp"
        app:layout_constraintRight_toRightOf="@+id/id_arm_right"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/id_arm_left"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="33dp" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/id_campo_suponer"
        android:textSize="24sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/id_but_GO"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="23dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/id_campo_grilla"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="16dp" />

    <Button
        android:text="GO!"
        android:layout_width="0dp"
        android:layout_height="51dp"
        android:id="@+id/id_but_GO"
        android:background="@android:color/holo_blue_light"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="17dp"
        app:layout_constraintBottom_toBottomOf="@+id/id_killer"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="95dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="100dp"
        app:layout_constraintLeft_toLeftOf="@+id/id_arm_right"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="16dp" />

    <TextView
        android:text="Dale: "
        android:layout_width="114dp"
        android:layout_height="53dp"
        android:id="@+id/id_label_escribe"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/id_campo_grilla"
        android:layout_marginStart="16dp"
        android:layout_marginTop="23dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="19dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp" />

    <TextView
        android:text="7"
        android:layout_width="111dp"
        android:layout_height="55dp"
        android:id="@+id/id_vidas"
        android:textSize="24dp"
        android:textStyle="bold"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/id_head"
        android:layout_marginTop="95dp"
        app:layout_constraintTop_toBottomOf="@+id/id_campo_suponer"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="95dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:id="@+id/id_campo_grilla"
        app:layout_constraintRight_toLeftOf="@+id/id_but_GO"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/id_vidas"
        android:layout_marginEnd="13dp"
        android:layout_marginTop="72dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="71dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/id_campo_suponer"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="13dp">

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
